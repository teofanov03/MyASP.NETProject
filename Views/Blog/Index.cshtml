@model List<TodoBlog.Models.Post>
@{
    ViewData["Title"] = "Blog";
}
<div class="d-flex justify-content-between align-items-center">
    <h2>Blog</h2>
    <a class="btn btn-primary" asp-action="Create">New Post</a>
</div>

<hr />

@foreach (var post in Model)
{
    <div class="card mt-3">
        <div class="card-body">
            <h4>@post.Title</h4>
            <p>@post.Content</p>
            <small class="text-muted">
                By @post.AuthorUserName on @post.CreatedAt.ToString("g")
            </small>
            <br />
            <a asp-action="Details" asp-route-id="@post.Id">Read More</a>
        </div>
    </div>
}

